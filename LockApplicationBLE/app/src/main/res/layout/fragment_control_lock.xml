<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ControlLockFragment">
    <TextView
        android:id="@+id/item_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Lock Name："
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"/>
    <TextView
        android:id="@+id/item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Status："
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_lock"
        android:layout_marginTop="16dp"/>
    <Button
        android:id="@+id/buttonUnlock"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/connect_circle"
        android:text="@string/unlock"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/item_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonLock"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/buttonLock"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/connect_circle"
        android:text="@string/lock"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonUnlock"
        app:layout_constraintTop_toBottomOf="@id/item_status"
        android:layout_marginTop="100dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
